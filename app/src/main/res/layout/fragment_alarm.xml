<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Hub$PlaceholderFragment">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Name:"
                android:id="@+id/textView12"
                android:textSize="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:id="@+id/editText"
                android:textSize="20dp"
                android:text="Enter Device Name Here" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Project ID:"
                android:id="@+id/textView17"
                android:textSize="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:textSize="20dp"
                android:text="Enter Project ID Here" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Reminder/Tracking Interval (Intervals of 5 minutes):"
                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/medTime1"
                android:clickable="false"
                android:textSize="15dp"
                android:layout_alignEnd="@+id/btn_save" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPicker2"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:clickable="false"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarm 1:"
                android:id="@+id/textView3"
                android:textSize="15dp"
                android:layout_below="@+id/numberPicker2"
                android:layout_alignParentStart="false"
                android:layout_toStartOf="@+id/btn_save" />


            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medSwitch1"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:checked="false"
                android:clickable="true" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medTime1"
                android:clickable="false"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignParentEnd="true"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alarm 2"
                android:id="@+id/textView5"
                android:layout_below="@+id/medTime1"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView3"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medSwitch2"
                android:checked="false"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:clickable="true" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medTime2"
                android:layout_below="@+id/medTime1"
                android:layout_alignParentEnd="true"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alarm 3"
                android:id="@+id/textView14"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medSwitch3"
                android:checked="false" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medTime3"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alarm 4"
                android:id="@+id/textView15"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medSwitch4"
                android:checked="false" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medTime4"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alarm 5"
                android:id="@+id/textView16"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medSwitch5"
                android:checked="false" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medTime5"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Button Configurations:"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_gravity="right"
                android:weightSum="1">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView6"
                    android:background="#ff00ff28" />

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView7"
                    android:background="#ffff2c00" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.62" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/startDropdown"
                    android:spinnerMode="dialog"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    android:id="@+id/yellowGroup"
                    android:background="#fff2ee00"
                    android:checkedButton="@+id/rYellowMeds"
                    android:layout_weight="0.23">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/rYellowMeds"
                        android:text="Meds"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/rYellowEvent"
                        android:text="Event"
                        android:checked="false" />


                </RadioGroup>


                <Spinner
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:id="@+id/yellowDropdown"
                    android:layout_weight="0.82"
                    android:spinnerMode="dialog" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.23" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    android:id="@+id/blueGroup"
                    android:background="#ff0034f2"
                    android:checkedButton="@+id/rBlueMeds">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/rBlueMeds"
                        android:text="Meds"
                        android:textColor="#fffef9ff"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/rBlueEvent"
                        android:text="Event"
                        android:textColor="#fffff6fc"
                        android:checked="false" />
                </RadioGroup>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/blueDropdown"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <Button
                android:layout_width="122dp"
                android:layout_height="87dp"
                android:text="Save Settings"
                android:id="@+id/btn_save"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/medSwitch2"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
