<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Hub$PlaceholderFragment">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Reminder/Tracking Interval (Intervals of 5 minutes):"
                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/medTime1"
                android:clickable="false"
                android:textSize="15dp"
                android:layout_alignEnd="@+id/btn_save" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPicker2"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:clickable="false"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarm 1:"
                android:id="@+id/textView3"
                android:textSize="15dp"
                android:layout_below="@+id/numberPicker2"
                android:layout_alignParentStart="false"
                android:layout_toStartOf="@+id/btn_save" />


            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medSwitch1"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:checked="false"
                android:clickable="true" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medTime1"
                android:clickable="false"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignParentEnd="true"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alarm 2"
                android:id="@+id/textView5"
                android:layout_below="@+id/medTime1"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView3"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medSwitch2"
                android:checked="false"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:clickable="true" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medTime2"
                android:layout_below="@+id/medTime1"
                android:layout_alignParentEnd="true"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alarm 3"
                android:id="@+id/textView14"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medSwitch3"
                android:checked="false" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medTime3"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alarm 4"
                android:id="@+id/textView15"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medSwitch4"
                android:checked="false" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medTime4"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alarm 5"
                android:id="@+id/textView16"
                android:textSize="15dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medSwitch5"
                android:checked="false" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medTime5"
                android:visibility="invisible" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
